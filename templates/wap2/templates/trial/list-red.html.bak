<ion-view hide-nav-bar="true" >
  <div class="bar bar-header bar-color ">
  <a href="#/tab/trial" style="color:#ffffff;"  class="button icon ion-ios-arrow-back button-clear ">所有试用</a>
  <h1 class="title">红包试用</h1>
  <div style="color:#ffffff;" class="button icon ion-ios-search-strong button-clear head_buttonr1"></div>
 </div>
