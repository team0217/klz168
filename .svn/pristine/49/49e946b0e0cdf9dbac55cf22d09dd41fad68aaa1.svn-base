<script type="text/javascript">
            getContent(1);
            function getContent(page) {
                var page = page || 1;
                var sort = $(".sub_right a[class~='font-red']");    
                var param = {
                  catid : $("a[data-catid][class='font-red']:last").attr('data-catid'),
                  mod   : 'trial',
                  orderby  :sort.attr('data-orderby'),
                  orderway : sort.attr('data-orderway'),
                  status:$("a[data-status][class='sxu_current']:last").attr('data-status'),
                  num:'15',
                  page:page
                };
                $.getJSON(site.site_root + '/?m=product&c=api&a=getlists', param, function(ret) {
                   var _html = '';
                   if(ret.status == 1) {
                        _html += '<ul class="picList2">'; 
                        $.each(ret.data.lists, function(i, n) {
                            _html += '<li><div class="pic"><a href="'+n.url+'" target="_blank">';
                            _html += '<img src="'+n.thumb+'" width="190" height="190" title="'+n.title+'" alt="'+n.title+'" onerror="javascript:this.src=\'{IMG_PATH}loading.gif\'"/></a></div><div class="title">';
                            _html += '<span class="small_logo"><img src="'+n.img_source+'" width="20" height="20"/></span>';
                            _html += '<a href="'+n.url+'" target="_blank" title="'+n.title+'">'+n.title+'</a>';
                            _html += '</div><div class="nohover2"><a style="text-decoration:line-through;">￥'+n.goods_price+'</a><a class="left1 all_limit">限量<b class="font-red">'+n.number+'</b>份</a></div>';
                            _html += '<div class="top1"><a href="'+n.url+'" target="_blank" class="anniu_button3 left5">免费试用</a></div>';
                            _html += '</li>';
                       });
                       _html += '</ul>';
                       $("#goods_lists").html(_html);
                       $("#pages").html(ret.data.pages);
                   } else {
                       $("#goods_lists").html(ret.info);
                       $("#pages").html('');
                       return false;
                   }
                });
            }
            
            $('#pages a').live('click', function() {
                var urlstr = $(this).attr('href').toString();
                var page = $.urlParam('page', urlstr);
                if(page != false) {
                    getContent(page);
                }
                return false;
            })
            
            $.urlParam = function(name, url){
                var url = url || window.location.href;
                var results = new RegExp('[\\?&]' + name + '=([^&#]*)').exec(url);
                if(!results) return false;
                return results[1] || 0;
            }
</script>

