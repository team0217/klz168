<script type="text/javascript"> 
$(document).ready(function(){
	linkage_catid.onChange(function() {
		var _cat_arr = this.getSelectedArr();
		$("#linkage_input_catid").attr("value", this.getSelectedValue());
		if(isNaN(parseInt(_cat_arr[_cat_arr.length - 1])) == true) {
			$("#linkage_input_catid").unFormValidator(false);//恢复校验
			$("#linkage_input_catidTip").attr('class', 'onError').text('请选择产品分类').show();
		} else {
			$("#linkage_input_catid").show().unFormValidator(true); //解除校验
			$("#linkage_input_catidTip").attr('class', 'onCorrect').text('分类选择正确').show();
		}
	});
});
$.formValidator.initConfig({
	formid:"myform",
	autotip:true,
	onerror:function(msg,obj){
		$(obj).focus();
	}
});

$("#title").formValidator({
	onshow:true,
	onfocus:"请输入10到30个汉字"
}).inputValidator({
	min:20,
	max:60,
	onerror:"标题为10到30个汉字"
});

$("#goods_url").formValidator({
	empty:false,
	onempty:"宝贝链接不能为空",
	onshow:true,
	onfocus:"请输入宝贝链接地址"
}).regexValidator({
	regexp:'url',
	datatype:'enum',
	onerror:'宝贝链接地址合适不合法'	
})

/* 发布份数 */
$("#goods_number").formValidator({
	empty:false,
	onempty:'发布份数不能为空',
	onshow:true,
	onfocus:'请输入发布份数'
}).regexValidator({
	regexp:'intege1',
	datatype:'enum',
	onerror:'发布份数只能为正数'
});

$("#goods_price").formValidator({
	empty:false,
	onempty:'下单价不能为空',
	onshow:true,
	onfocus:'请输入下单价'
}).regexValidator({
	regexp:'num',
	datatype:'enum',
	onerror:'下单价输入格式错误'
}).functionValidator({
	fun:function(val,elem){
		if(parseInt(val) >=999999){
			return '请输入合适的价格';

		}else{
			return true;
		}
	}
}).ajaxValidator({
    url : "{U('reward')}",
    datatype:'JSON',
    async:false,
    success:function(ret) {
        if(ret) {
            $("#bonus_price").val(ret);
            $("#bonus").val(ret);

            return true;
        } else {
            return false;
        }
    },
    onerror:'请输入下单价'
});


var goods_price = $("#goods_price").val();
$("#bonus_price").formValidator({
	empty:true,
	onshow:true,
	onfocus:'请输入赠送试客佣金'
}).functionValidator({
	fun:function(val,elem){
		var goods_bonus =  $("#bonus").val();
		if(parseInt(val) < parseInt(goods_bonus)){
			return '赠送用户红包的最低'+goods_bonus+'元起';
		}else{
			return true;
		}
	}
}).regexValidator({
	regexp:'num',
	datatype:'enum',
	onerror:'用户红包只能为正数'
}).ajaxValidator({
    url : "{U('check_bouns')}",
    datatype:'JSON',
    getdata:{goods_price:"goods_price"},
    async:false,
    success:function(ret) {
        if(ret.status == 1) {
            return true;
        } else {
        	$("#bonus").val(ret.url);
        	$("#bonus_price").val(ret.url);
            return false;
        }
    },
   // onerror:'请区间的佣金最低'+goods_bonus+'元'
});

/* 商品位置 */
$("#goods_address").formValidator({
	empty:false,
	onempty:'商品位置不能为空',
	onshow:true,
	onfocus:"请输入商品位置"
}).regexValidator({
	regexp:'notempty',
	datatype:'enum',
	onerror:'商品位置不能为空'
});


/* 活动天数 */
$("#activity_days").formValidator({
	empty:false,
	onempty:'活动天数不能为空',
	onshow:true,
	onfocus:'请输入活动天数'	
}).regexValidator({
	regexp:'intege1',
	datatype:'enum',
	onerror:'活动天数只能为正整数'	
});

/*旺旺*/
