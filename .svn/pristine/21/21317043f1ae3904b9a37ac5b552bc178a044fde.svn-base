<script language="javascript" type="text/javascript" src="<?php echo JS_PATH?>formvalidator.js" charset="UTF-8"></script>
<script language="javascript" type="text/javascript" src="<?php echo JS_PATH?>formvalidatorregex.js" charset="UTF-8"></script>
<script type="text/javascript"> 

$.formValidator.initConfig({
	formid:"myform",
	autotip:true,
	onerror:function(msg,obj){
		$(obj).focus();
	}
});

$("#bank_username").formValidator({
	empty:false,
	onempty:'开户行不能为空',
	onshow:"",
	onfocus:"请输入开户行姓名"
}).regexValidator({
	regexp:'chinese',
	datatype:'enum',
	onerror:"开户行姓名输入错误"
}).inputValidator({
	min:4,
	max:50,
	onerror:"不超过50个字符，汉字算两个字符"
});

$("#bank_account").formValidator({
	empty:false,
	onempty:'卡号不能为空',
	onshow:"请输入银行卡号",
	onfocus:"请输入银行卡号"
}).regexValidator({
	regexp:'bank_account',
	datatype:'enum',
	onerror:"银行卡号输入错误"
});
$("#sub_branch").formValidator({
	empty:false,
	onempty:'开户行不能为空',
	onshow:"请输入开户行名称",
	onfocus:"请输入开户行名称"
}).regexValidator({
	regexp:'ps_username',
	datatype:'enum',
	onerror:"开户行输入错误"
});

</script>
<script type="text/javascript">
			$(document).ready(function(){
				//查询省市
				$("#province").change(function(){
					$("#city").remove();
					var _this = $(this).val();
					$.ajax({
						url:'{U('Member/Profile/get_area')}',
						type:'post',
						dataType:'json',
						data:{'id':_this},
						success:function(data){
							var html = '';
							html += '<select name="city" class="c999999" id="city">';
							$.each(data ,function(i,item){
								html += '<option value="'+item.linkageid+'">'+item.name+'</option>';
							});
							html += '</select>';
							$("#province").after(html);
						}
					});
				});
				//查询城镇
				$("#city").live('change', function(){
					$("#area").remove();
					var _this = $(this).val();
					$.ajax({
						url:'{U('Member/Profile/get_area')}',
						type:'post',
						dataType:'json',
						data:{'id':_this},
						success:function(data){
							var html = '';
							html += '<select name="area" class="c999999" id="area">';
							$.each(data ,function(i,item){
								html += '<option value="'+item.linkageid+'">'+item.name+'</option>';
							});
							html += '</select>';
							$("#city").after(html);
						}
					});
				});
				
				//默认地址 取得选中的省市id
				var city = "<?php echo $city;?>"; 
				var proid = $("#province").find("option:selected").val();
				$.ajax({
					url:'{U('Member/Profile/get_area')}',
					type:'post',
					dataType:'json',
					data:{'id':proid},
					success:function(data){
						var html = '';
						html += '<select name="city" class="c999999" id="city">';
						$.each(data ,function(i,item){
							if(item.linkageid == city){
								html += '<option value="'+item.linkageid+'" selected>'+item.name+'</option>';
							}else{
								html += '<option value="'+item.linkageid+'">'+item.name+'</option>';
							}
						});
						html += '</select>';
						$("#province").after(html);
					}
				});
				//alert(city);
				//默认的乡镇
				$.ajax({
					url:'{U('Member/Profile/get_area')}',
					type:'post',
					dataType:'json',
					data:{'id':city},
					success:function(data){
						var html = '';
						html += '<select name="area" class="c999999" id="area">';
						var area = "<?php echo $area;?>";//乡镇
						$.each(data ,function(i,item){
							if(item.linkageid == area){
								html += '<option value="'+item.linkageid+'" selected>'+item.name+'</option>';
							}else{
								html += '<option value="'+item.linkageid+'">'+item.name+'</option>';
							}
						});
						html += '</select>';
						$("#city").after(html);
					}
				});
			});						
		</script>
<script type="text/javascript">
	$("#js_submit").click(function(){
		var bank_name = $("#bank_name  option:selected").val();
		var bank_username = $("#bank_username").val();
		var bank_account = $("#bank_account").val();
		var province = $("#province  option:selected").val();
		var city = $("#city  option:selected").val();
		var area = $("#area  option:selected").val();
		var sub_branch = $("#sub_branch").val();
		
		if (bank_name < 1) {
			art.dialog({
						lock: true,
						fixed: true,
						icon: 'face-smile',
						title: '提示',
						content: '请选择开户银行',
						okVal: '确定',
						ok:true
						});
			return false;
		};

		if (bank_account == '') {
			$("#bank_account").focus();
			return false;
		};
		if (city < 0 || province < 0) {
			art.dialog({
						lock: true,
						fixed: true,
						icon: 'face-smile',
						title: '提示',
						content: '请选择开户行所在地',
						okVal: '确定',
						ok:true
						});
			return false;

		};

		if (sub_branch == '') {
			$("#sub_branch").focus();
			return false;
		};

		$.post("{U('Member/Attesta/bank_attesta')}",{bank_name:bank_name,bank_username:bank_username,account:bank_account,province:province,city:city,area:area,sub_branch:sub_branch},function(data){
						if (data.status == 1) {
							art.dialog({
							lock: true,
							fixed: true,
							icon: 'face-smile',
							title: '提示',
							content: data.info,
							okVal: '确定',
							ok:function() { 
								location.href='{U('Member/Attesta/index')}';
							}
						});

						}else{
							art.dialog({
							lock: true,
							fixed: true,
							icon: 'face-sad',
							title: '错误提示',
							content: data.info,
							ok: true
						});

							};
											
					},'json');
							});
	
</script>