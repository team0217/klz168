<ion-view hide-nav-bar="true" >
  <div class="bar bar-header bar-color" ng-if=" quyu == 1 ">
   <!--     <a href="#/tab/trial" style="color:#ffffff;" class="button icon ion-ios-arrow-back button-clear head_button1"></a>-->
        <h1 class="title">（小树林）{{webinfo.webname}}</h1>
        <a href="#/tab/so" style="color:#ffffff;" class="button icon ion-search button-clear head_buttonr1"></a >
  </div>
  <div ng-if="quyu == 1" >
    <ion-content style="background-color:#F8F8F8;margin-top :0px;padding-top:45px;" >
      <ion-refresher pulling-text="下拉更新" pulling-icon="ion-loading-c" refreshing-text="更新成功" 
       refreshing-icon="ion-loading-c" on-refresh="doRefresh()">
       </ion-refresher>
      <!-- 首页幻灯 -->
      <div class="home-slide">
        <ion-slide-box does-continue="true" auto-play="true" slide-interval="3000">
          <ion-slide ng-show = 'focus[0]'>
            <img  ng-src="{{focus[0].image |imgUrl }}">
          </ion-slide>
          <ion-slide ng-show = 'focus[1]'>
            <img  ng-src="{{focus[1].image | imgUrl}}">
          </ion-slide>
          <ion-slide ng-show = 'focus[2]'>
            <img  ng-src="{{focus[2].image | imgUrl}}">
          </ion-slide>
        </ion-slide-box>
      </div>

      <div class="indexNav padding-top  ">
        <a class="part" href="#/tab/trial">
          <div class="a1">
            <img src="img/shiyong.png"></div>
          <div class="a2">闪电佣金</div>
        </a>
        <a class="part" href="#/tab/rebate">
          <div class="a1">
            <img src="img/fanli.png"></div>
          <div class="a2">超级返利</div>
        </a>
        <a ng-click="dianji()" class="part" href="#/tab/task">
          <div class="a1">
            <img src="img/renwu.png" ></div>
          <div class="a2">开心任务</div>
        </a>
